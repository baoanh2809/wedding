        each story,i in storys  
            .row-story.col-sm-6.col-md-4.col-lg-3
                .card.card-border.border-dark.shadow-lg.card-border-radius-none.mb-7
                form#stories-form.form-story-user                  
                    .card-body
                        a.thumbnail.d-block.mb-3.choose-image-parent.position-relative(href='javascript:void(0)')
                            .choose-image-overlay.d-flex.justify-content-center.align-items-center.position-absolute.top-0.start-0.w-100.h-100
                                button.btn.btn-primary.btn-xs.position-relative(type='button')
                                    | Thay &dstrok;&#x1ED5;i
                                    input#upload_image_story.upload_image_story.file-field-absolute(type='file' data-index='index_1' name='upload_image_story')
                            img#show_image_story.img-thumbnail.w-100.img-photo.rounded-0(src='https://cdn.biihappy.com/ziiweb/default/website/383875f7dbad0c73b240243aeecb74dd.jpeg')
                        //- .field-story_photo_base64
                        //-     input#story_photo_base64.form-control(type='hidden' name='WebsiteInformationStoryForm[photo_base64][]')
                        //-     .help-block
                        //- .field-story_photo
