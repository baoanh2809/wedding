            .storiesContainer.row.mt-6
                .row-story.col-sm-6.col-md-4.col-lg-3
                    .card.card-border.border-dark.shadow-lg.card-border-radius-none.mb-7
                        .card-body
                            a.thumbnail.d-block.mb-3.choose-image-parent.position-relative(href='javascript:void(0)')
                                .choose-image-overlay.d-flex.justify-content-center.align-items-center.position-absolute.top-0.start-0.w-100.h-100
                                    button.btn.btn-primary.btn-xs.position-relative(type='button')
                                        | Thay &dstrok;&#x1ED5;i
                                    input#upload_image_story_index_1.upload_image_story.file-field-absolute(type='file' data-index='index_1' name='upload_image_story_index_1')
                                img#show_image_story_index_1.img-thumbnail.w-100.img-photo.rounded-0(src='https://cdn.biihappy.com/ziiweb/default/website/383875f7dbad0c73b240243aeecb74dd.jpeg')
                            .field-story_photo_base64_index_1
                                input#story_photo_base64_index_1.form-control(type='hidden' name='WebsiteInformationStoryForm[photo_base64][]')
                                .help-block
                            .field-story_photo_index_1
                                input#story_photo_index_1.form-control(type='hidden' name='WebsiteInformationStoryForm[photo][]' value='default/website/383875f7dbad0c73b240243aeecb74dd.jpeg')
                                .help-block
                            .field-story_title_index_1.required
                                .form-floating.mb-2
                                    input#story_title_index_1.form-control(type='text' name='title' value=`${storys.title}` placeholder='Tiêu đề')
                                    label.control-label(for='title') Ti&ecirc;u &dstrok;&#x1EC1;
                                    .help-block
                            .field-story_time_index_1.required
                                .form-floating.mb-2
                                    input#time_index_1.form-control(type='text' name='time' value=`${storys.time}` placeholder='Thời gian')
                                    label.control-label(for='time_index_1') Th&#x1EDD;i gian
                                    .help-block
                            .field-story_intro_index_1.required
                                .form-floating.mb-2
                                    textarea#story_intro_index_1.form-control(name='content' style='height:150px;resize: none;' placeholder='Nội dung')=`${storys.content}`
                                    label.control-label(for='content') N&#x1ED9;i dung
                                    .help-block
                            button.btn.btn-danger-soft.btn-sm.w-100.btn-remove-form(type='button') Xo&aacute;
            .p-5.text-center.bg-gray-200
                button.btn.btn-secondary.button-add-more-story(type='button')
                    svg.bi.bi-plus(xmlns='http://www.w3.org/2000/svg' width='16' height='16' fill='currentColor' viewbox='0 0 16 16')
                        path(d='M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z')
                    | &#x9;&#x9;Th&ecirc;m s&#x1EF1; ki&#x1EC7;n
