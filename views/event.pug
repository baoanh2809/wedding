                                .field-event_date.required
                                    .form-floating.mb-2
                                        input.form-control(type='date' name='date' id=`date${i+1}` value=`${event.date}` placeholder='Ngày')
                                        label.control-label(for=`date${i+1}`) Ng&agrave;y
                                        .help-block
                                .field-event_address.required
                                    .form-floating.mb-2
                                        input.form-control(type='text' name='address' id=`address${i+1}` value=`${event.address}` placeholder='Địa chỉ')
