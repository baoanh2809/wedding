extend editwedsite 

block content 
    if(bridesmaids)
        - var n =1
        each bridesmaid in bridesmaids
            while n < 2
                ul.nav.nav-pills.nav-fill.nav-list-website-menu
                    li.nav-item
                        a.nav-link.bg-gray-200(aria-current='page' href=`/wedding/edit/${bridesmaid.wedding}/bridegroom` ) C&ocirc; D&acirc;u &amp; Ch&uacute; R&#x1EC3;
                    li.nav-item
                        a.nav-link.active(href=`/wedding/edit/${bridesmaid.wedding}/bridesmaids` ) Ph&ugrave; D&acirc;u &amp; Ph&ugrave; R&#x1EC3;
                    li.nav-item
                        a.nav-link.bg-gray-200(href=`/wedding/edit/${bridesmaid.wedding}/event`) S&#x1EF1; ki&#x1EC7;n
                    li.nav-item
                        a.nav-link.bg-gray-200(href=`/wedding/edit/${bridesmaid.wedding}/storylove`) Chuy&#x1EC7;n T&igrave;nh Y&ecirc;u
                    li(style='color:white')=n++
    .row.mt-6   
        if(bridesmaids)
            form#groomsmans-bridesmaids-form.form-bridesmaid-user
                input(type='hidden' name='_csrf-biihappy')
                each bridesmaid,i in bridesmaids   
                    .row.mt-6.form-user-test
                        .col-sm-6
                            .groomsmansContainer.formInforContainer
                                .card.card-border.border-dark.shadow-lg.card-border-radius-none.mb-7
                                    .card-body
                                        .d-block.text-center
                                            a.icon-circle.icon-avatar.thumbnail.d-block.mb-3.choose-image-parent.position-relative.m-auto(href='javascript:void(0)')
                                                .choose-image-overlay.d-flex.justify-content-center.align-items-center.position-absolute.top-0.start-0.w-100.h-100
                                                    button.btn.btn-primary.btn-xs.position-relative(type='button')
                                                        | Thay &dstrok;&#x1ED5;i
                                                    input.upload_image_event.file-field-absolute(type='file' accept='image/*' id =`avatar${i+1}` name=`avatar${i+1}`)
                                                    input.form-control(type='hidden' id=`avatarstore${i+1}` name=`avatarstore${i+1}` value=`${bridesmaid.avatar}`)
                                                img#show_image_groomsman_.w-100.img-avatar.img-thumbnail.rounded-0(src=`/img/wedding/${bridesmaid.avatar}`)
                                        h4.fw-bold.text-center.mb-5.text-uppercase
                                            | Th&ocirc;ng tin ph&ugrave; r&#x1EC3;
                                        .field-groomsmans_name_.required
                                            .field-bridesmaids-id.required
                                                input.form-control(type='hidden' name='id' id=`id${i+1}` value=`${i+1}`)
                                                .help-block
                                            .form-floating.mb-2.form-group
                                                input.form-control(type='text' name=`name${i+1}` id=`name${i+1}` value=`${bridesmaid.name}` placeholder='Tên')
                                                label.control-label(for=`name${i+1}`) T&ecirc;n
                                                .help-block
                                        .field-groomsmans_birthday_.required
                                            .form-floating.mb-2
                                                input.form-control(type='date' name=`birthday${i+1}` id=`birthday${i+1}` value=`${bridesmaid.birthday}` placeholder='Ngày sinh')
                                                label.control-label(for=`birthday${i+1}`) Ng&agrave;y sinh
                                                .help-block
                                        .field-groomsmans_intro_.required
                                            .form-floating.mb-2
                                                textarea.form-control(name=`introduce${i+1}` id=`introduce${i+1}` style='height:100px;resize: none;' placeholder='Giới thiệu ngắn về chú rể...')=`${bridesmaid.introduce}`
