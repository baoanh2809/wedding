                                                input.form-control(type='text' name=`fename${i+1}` id=`fename${i+1}` value=`${bridesmaid.fename}` placeholder='Tên')
                                                label.control-label(for=`fename${i+1}`) T&ecirc;n
                                                .help-block
                                        .field-groomsmans_birthday_.required
