                                                input.form-control(type='date' name=`febirthday${i+1}` id=`febirthday${i+1}` value=`${bridesmaid.febirthday}` placeholder='Ngày sinh')
                                                label.control-label(for=`febirthday${i+1}`) Ng&agrave;y sinh                                                    
                                                .help-block
                                        .field-groomsmans_intro_.required
                                            .form-floating.mb-2
                                                textarea.form-control(name=`feintroduce${i+1}` id=`feintroduce${i+1}` style='height:100px;resize: none;' placeholder='Giới thiệu ngắn về chú rể...')=`${bridesmaid.feintroduce}`
                                                label.form-label(for=`feintroduce${i+1}`) Gi&#x1EDB;i thi&#x1EC7;u
                                                .help-block
                                        .field-groomsmans_facebook_index_1
                                            .form-floating.mb-2
                                                input.form-control(type='text' name=`fefb${i+1}` id=`fefb${i+1}` value=`${bridesmaid.fefb}`  placeholder='Facebook')
                                                label.control-label(for=`fefb${i+1}`) Facebook
                                                .help-block
                        .p-5.text-center.bg-gray-200.mt-7
                            button#groomsmen-ID.btn.btn-danger.me-7.btn--save(type='submit' data-groomsmen-id=`${bridesmaid.id}` style='margin-right:25px,height:55px' )
                                | Lưu
                            button.btn.btn-danger-soft.btn-sm.btn-remove-bridesmaids(data-id=`${bridesmaid.id}`) Xo&aacute;
                each bridesmaid,i in bridesmaids
                    if(i<1)
