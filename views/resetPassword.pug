extend base
block head
  link(rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.6/css/bootstrap.min.css' integrity='sha384-rwoIResjU2yc3z8GV/NPeZWAv56rSmLldC3R/AZzGRnGxQQKnKkoFVhFQhNUwEyJ' crossorigin='anonymous')
block content
  .main
    .container.mt-10.mb-14(style='height:306px')
      form.reset-password-form
        .form-group
          label(for='password') Nhập Mật Khẩu Mới Của Bạn
          input#password.form-control(type='password'  placeholder='Nhập Mật Khẩu')
          input#token(type='hidden' value=`${users}`)
        .form-group
          label(for='passwordConfirm') Nhập Lại Mật Khẩu
          input#passwordConfirm.form-control(type='passwordConfirm' placeholder='Nhập Lại Mật Khẩu')
        button#ChangeButton.btn.btn-primary(type='button') Change Password
